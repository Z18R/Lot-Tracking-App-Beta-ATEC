@model LotTrackingApp.Models.LotTracking

<div class="row">

    <!-- Hidden field to store the LotCode -->
    <input type="hidden" id="lotCode" value="@Model.LotCode" />

    <div class="col-md-6">
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Lot Alias / Lot No.:</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" value="@Model.LotAlias" readonly />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Customer ID:</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" value="@Model.CustomerID" readonly />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Product ID:</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" value="@Model.ProductID" readonly />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Package Type:</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" value="@Model.PackageID" readonly />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Stage ID:</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" value="@Model.StageID" readonly />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Store ID:</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" value="@Model.StoreID" readonly />
            </div>
        </div>
    </div>

    <!-- Second Column -->
    <div class="col-md-6">
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Current Qty:</label>
            <div class="col-sm-8">
                <input type="text" id="CurrentQty" class="form-control" value="@Model.CurrentQty" readonly />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Device:</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" value="@Model.MaterialID" readonly />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Flow ID:</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" value="@Model.FlowID" readonly />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Lead Type:</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" value="@Model.LeadTypeID" readonly />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Recipe ID:</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" value="@Model.RecipeID" readonly />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Status ID:</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" value="@Model.StatusID" readonly />
            </div>
        </div>
    </div>
</div>
